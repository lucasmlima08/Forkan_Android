<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Jogo"
    android:background="@drawable/fundo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="#ffffffff">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/boneco"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@drawable/boneco6" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.4"
            android:background="#ffffffff"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/categoria"
                android:textSize="@dimen/categoria"
                android:layout_weight="1.2"
                android:layout_gravity="center_horizontal"
                android:text="ESTADOS DO BRASIL"
                android:textColor="#ff000000" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/pontuacao"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/opcoesDuranteJogo"
                    android:layout_weight="1.2"
                    android:text=" Pontuação: 20"
                    android:textColor="#ff6a6a6a"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/tempoTotal"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/opcoesDuranteJogo"
                    android:layout_weight="1.2"
                    android:text="Tempo: 2m10 "
                    android:textColor="#ff6a6a6a"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/tempoRestante"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/opcoesDuranteJogo"
                    android:layout_weight="1.2"
                    android:text="Faltam: 21s"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ff6a6a6a" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/palavraDoJogo"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/palavraChave"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_weight="1"
                android:text="R I O    G R A N D E    D O    N O R T E"
                android:textColor="#ff000000" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/botoes1"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="#ffd1d1d1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="A"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="B"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="C"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="D"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="E"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="F"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="G"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/botoes2"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="#ffd1d1d1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="H"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="I"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="J"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="K"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="L"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="M"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="N"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/botoes3"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="#ffd1d1d1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="O"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="P"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Q"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="R"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="S"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="T"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="U"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/botoes4"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="#ffd1d1d1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="V"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="X"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="W"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Y"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Z"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="-"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:onClick="eventLetters" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/letrasJogo"
                    android:singleLine="false"
                    android:text=" "
                    android:onClick="eventLetters" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
